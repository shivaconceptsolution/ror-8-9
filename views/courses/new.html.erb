<div style="margin-left: 100px;margin-top: 100px;">
<%= form_with model: @course do |form| %>
  <div>
    <%= form.label :cname %><br>
    <%= form.text_field :cname %>
    
  </div>

  <div>
    <%= form.label :duration %><br>
    <%= form.text_field :duration %><br>
   
  </div>
<div>
    <%= form.label :fees %><br>
    <%= form.text_field :fees %><br>
   
  </div>

  <div style="margin-top:10px;">
    <%= form.submit %>
  </div>
<% end %>
</div>